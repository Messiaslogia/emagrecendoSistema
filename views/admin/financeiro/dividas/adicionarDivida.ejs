                <form class="text-center border border-light p-5" enctype="application/x-www-form-urlencoded" action="/apiDividas/addNovaDivida?user=<%= idUser %>" method="post"
                    id="DividaForm">
                    <p class="h4 mb-4 text-center">Nova Dívida</p>
        
                    <input id="id_user" type="hidden" name="id_user" value="<%= idUser %>">
        
                    <!-- Tipo de Dívida -->
                    <div class="form-row mb-2">
