    <!--Mostra inputs das Parcelas  -->
    <script>
        // Máscara para o campo "Valor"
        IMask(
            document.getElementById('valorDivida'),
            {
                mask: 'R$ num',
                blocks: {
                    num: {
                        mask: Number,
                        thousandsSeparator: '.',
                        padFractionalZeros: true,
                        radix: ',',
                        scale: 2,
                        normalizeZeros: true,
                        integerDigits: 10,
                        max: 9999999999
                    }
                }
            }
        );

        // Máscara para o campo "Data"
        IMask(
            document.getElementById('dataInicioDivida'),
            {
                mask: '00/00/0000',
                blocks: {
                    '0': {
                        mask: IMask.MaskedRange,
                        from: 0,
                        to: 9
                    },
                    '00': {
                        mask: IMask.MaskedRange,
                        from: 0,
                        to: 31
                    },
                    '0000': {
                        mask: IMask.MaskedRange,
                        from: 2000,
                        to: 2100
                    }
                }
            }
        );

        let tipoDivida = document.getElementById('tipoDivida');
        let divDataInicio = document.getElementById('divDataInicio');
        let divParcelasDivida = document.getElementById('divParcelasDivida');


        divParcelasDivida.style.display = "none";

        tipoDivida.addEventListener('change', () => {
            if (tipoDivida.value === "3") { 
                divDataInicio.style.display = "block";
                divParcelasDivida.style.display = "block";
            } else {
        
                divParcelasDivida.style.display = "none";
            }
        });
    </script>

